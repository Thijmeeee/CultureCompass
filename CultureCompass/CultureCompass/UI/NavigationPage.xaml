<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="CultureCompass.UI.NavigationPage"
             >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <maps:Map x:Name="map" Grid.Row="1"  />

        <HorizontalStackLayout Grid.Row="2">
            <Label x:Name="DistanceLabel" Text="Distance:" Margin="20, 0,0,0"/>
            <Button x:Name="StopRouteButton" Text="Stop Route" Clicked="StopRouteButton_Clicked" Margin="20" BackgroundColor="Red" TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>
        </HorizontalStackLayout>
       

    </Grid>
</ContentPage>

