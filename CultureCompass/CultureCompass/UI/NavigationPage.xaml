<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="CultureCompass.UI.NavigationPage"
             Shell.BackgroundColor="Blue"
             Shell.TitleColor="White">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <StackLayout x:Name="stacklayout" Grid.Row="1">
        <maps:Map x:Name="mapNavigation"/>
        </StackLayout>

        <VerticalStackLayout Grid.Row="2">
            <HorizontalStackLayout Margin="20">
                <Label Text="Distance left to walk:" FontSize="Medium" FontAttributes="Bold"/>
                <Label x:Name="DistanceLabel" Margin="20,0,0,0" Text="Text here" FontSize="Medium" FontAttributes="Bold"/>
            </HorizontalStackLayout>

            <Button x:Name="StopRouteButton" Text="Stop Route" Clicked="StopRouteButton_Clicked" Margin="20" BackgroundColor="Red" TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>

