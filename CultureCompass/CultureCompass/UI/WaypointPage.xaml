<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CultureCompass.UI.WaypointPage"
             Title="Informatie over ..">
    <VerticalStackLayout>
        <Image x:Name="ImageWaypoint" WidthRequest="250" HeightRequest="250"></Image>

        <Label Text="Informatie" FontSize="Title" TextColor="Black" Margin="20,0,0,0"></Label>
        <Label x:Name="DescriptionLabel" Text="Omschrijving hier" FontSize="Default" TextColor="Black" Margin="20,0,0,0"></Label>

        <HorizontalStackLayout>
            <Label Text="Bouwjaar" FontSize="Default" TextColor="Black" Margin="20,0,0,0"></Label>
            <Label x:Name="BuildYearLabel" Text="Bouwjaar hier" FontSize="Default" TextColor="Black" Margin="20,0,0,0"></Label>
        </HorizontalStackLayout>

        <Button x:Name="GoBackToRouteButton" Text="Terug naar Route" Clicked="BackToRouteButton_Clicked" Margin="20" BackgroundColor="Red" TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>
    </VerticalStackLayout>
</ContentPage>